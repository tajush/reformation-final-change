<div class="signup-container">
  {% form 'customer', class: 'signup-form' %}
    <fieldset>
      <input name="contact[tags]" type="hidden" value="newsletter">
      {%- if form.errors -%}
        <div class="form-notification error" id="Newsletter-error--{{ section.id }}">
          {% render 'svg-icons' with 'thb-error' %}
          {{ form.errors.translated_fields.email | capitalize }}
          {{ form.errors.messages.email }}
        </div>
      {%- endif -%}
      {%- if form.posted_successfully? -%}
        <div class="form-notification success" id="Newsletter-success--{{ section.id }}">
          {% render 'svg-icons' with 'thb-success' %}
          {{ 'newsletter.success' | t }}
        </div>
      {%- endif -%}
      <div class="field">
        <input
          class="signup-newsletter input1 input-border "
          placeholder="Email address"
          type="email"
          id="NewsletterForm--{{ section.id }}"
          name="contact[email]"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          value="{{ form.email }}"
          pattern="^([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,10})(\]?)$"
          title="xxx@xxx.xxx"
          {% if form.errors %}
            autofocus
            aria-invalid="true"
            aria-describedby="Newsletter-error--{{ section.id }}"
          {% elsif form.posted_successfully? %}
            aria-describedby="Newsletter-success--{{ section.id }}"
          {% endif %}
          required
        >
        <div id="hiddenFields" class="hidden">
          <input
            class="signup-newsletter input-border"
            placeholder="First name"
            type="text"

            name="text"
            autocorrect="off"
            autocapitalize="off"

            {% if form.errors %}
              autofocus
              aria-invalid="true"
              aria-describedby="Newsletter-error--{{ section.id }}"
            {% elsif form.posted_successfully? %}
              aria-describedby="Newsletter-success--{{ section.id }}"
            {% endif %}
            required
          >
          <input
            class="signup-newsletter input-border "
            placeholder="Last name "
            type="text"

            name="text"
            autocorrect="off"
            autocapitalize="off"

            {% if form.errors %}
              autofocus
              aria-invalid="true"
              aria-describedby="Newsletter-error--{{ section.id }}"
            {% elsif form.posted_successfully? %}
              aria-describedby="Newsletter-success--{{ section.id }}"
            {% endif %}
            required
          >

          <select class=" input-border bottom-space">
            <option value="Gender">Gender</option>
            <option value="Male">Male</option>
            <option value="female">Female</option>

            <option value="Rather not say">Rather not say</option>
          </select>
          <button
            class="submit button outline custom_button1 signup-button"
            type="submit"
            aria-label="{{ 'sections.signup.enter_your_email' | t }}"
          >
            {% render 'svg-icons' with 'signup-submit' %} Signup
          </button>
          <p class="submit-text">
            By submitting this form, you agree to Represent's
            <a href="https://jardindedenclo.com/policies/terms-of-service" class="bottom-border">Terms of Service</a>
            and you confirm you have read Represent's
            <a href="https://jardindedenclo.com/policies/privacy-policy" class="bottom-border">Privacy Policy</a> .
          </p>
        </div>
        <!--
          <label class="field__label" for="NewsletterForm--{{ section.id }}">
            {{ 'newsletter.label' | t }}
          </label>
        -->
      </div>
    </fieldset>

    <!--
      {%- if settings.email_terms_conditions_enable -%}
        <div class="signup-container--terms">
          <input type="checkbox" id="NewsletterTerms-{{ form.id }}" required>
          <label for="NewsletterTerms-{{ form.id }}">
            {{ 'sections.signup.i_agree' | t }}
          </label>
        </div>
      {%- endif -%}
    -->
  {% endform %}
</div>

<style>
  .field input {
    color:black !important;
  }
    .bottom-border{
      border-bottom: 1px solid black;
  }
    .submit-text {
       word-spacing: .00em;
      margin-top:14px;
     }
           .signup-button {
             position: relative !important;
             bottom: 0;
             /* right: 0; */
             height: 100%;
             max-height: 52px;
             width: 100% !important;
             display: flex;
             align-items: center;
             justify-content: center;
         }
             /* Custom CSS */
           .custom_button1 {
             transition: 0.35s;
             border: none !important;
             /* padding: 0 !important; */
             height: 30px !important;
             margin-top:0 !important;
           }

           .custom_button1:hover {
             color: black !important;
             transition: 0.35s;
           }

           .custom_button1:before,
           .custom_button1:after {
             content: "";
             width: 100%;
             border-bottom: 3px solid black;
             position: absolute;
             bottom: 0;
             left: 0;
             opacity: 1;
             transform: scale(1, 1);
             transform-origin: right center 0;
           }

           .custom_button1:after {
             opacity: 0;
             transform: scale(0, 1);
             transform-origin: left center 0;
           }

           .custom_button1:hover:before {
             opacity: 0;
             transform: scale(0, 1);
             transition: opacity 0.2s ease-in-out 0.2s, transform 0.2s ease-in-out 0s;
           }

           .custom_button1:hover:after {
             opacity: 1;
             transform: scale(1, 1);
             transition: transform 0.2s ease-in-out 0.25s;
           }
             .hidden {
                 display: none;
             }
               .custom_button1.signup-button:before {
                     background: none;
                 }
         .input-border {
           border: none !important;
           border-bottom: 1px solid black !important;
       }
     .bottom-space {
         width: 100%;
         margin-bottom: 18px;
     }
      select {
               -webkit-appearance: menulist;
               -moz-appearance: menulist;
               appearance: menulist;
           }
</style>

<script>
  // Use getElementsByClassName to get the input field by class
  var input1Elements = document.getElementsByClassName('input1');
  if (input1Elements.length > 0) {
      input1Elements[0].addEventListener('click', function() {
          document.getElementById('hiddenFields').classList.remove('hidden');
      });
  }
</script>
